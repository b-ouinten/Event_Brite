<div class="container-fluid">
  <div class="jumbotron alert alert-warning mt-3">
    <div class="row">
      <div class="col-xs col-md-7 d-flex flex-column justify-content-between event-pretty-border mb-2 mb-md-0 py-2">
        <div>
          <h2 class="text-uppercase font-weight-bold"><%= @event.title %></h2>
          <h5> <%= @event.description %></h5>
        </div>
        <div>
          <p class="mb-0"><span class="font-weight-bold">There are :</span> <%= @event.participants.count %> participants currently.</p>
          <p class="mb-0"><span class="font-weight-bold">You can contact the creator at :</span> <%= @event.admin.email %></p>
        </div>
      </div>
      <div class="col-xs col-md-5 align-self-center">
        <div class="card bg-primary">
          <div class="card-header font-weight-bold">
            Event details
          </div>
          <div class="card-body d-flex flex-column justify-content-between">
            <p class="card-text"><span class="font-weight-bold">Start date :</span> <%= @event.start_date.strftime('%d/%m/%Y at %I:%M %p') %></p>
            <p class="card-text"><span class="font-weight-bold">End date :</span> <%= @event.end_date.strftime('%d/%m/%Y at %I:%M %p') %></p>
            <p class="card-text"><span class="font-weight-bold">Duration : </span><%= @event.duration %></p>
            <p class="card-text"><span class="font-weight-bold">Location : </span><%= @event.location %></p>
            <p class="card-text"><span class="font-weight-bold">Price : </span><%= @event.price %> â‚¬</p>
            <div class="d-flex flex-column justify-content-center align-items-center mr-1 mb-1">
              
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>