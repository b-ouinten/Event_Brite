<div class="container-fluid">
  <div class="jumbotron alert alert-primary mt-3">
    <h1 class="text-uppercase font-weight-bold"><%= @event.title %></h1>
    <h5> <%= @event.description %></h5>
    <hr class="my-4">
    <p class="mb-3"><span class="font-weight-bold">There are :</span> <%= @event.participants.count %> participants currently.</p>
    <p class="mb-3"><span class="font-weight-bold">You can contact the creator at :</span> <%= @event.admin.email %></p>
    <p class="h6"><span class="font-weight-bold">Start date :</span> <%= @event.start_date.strftime('%d/%m/%Y at %I:%M %p') %></p>
    <p class="h6"><span class="font-weight-bold">End date :</span> <%= @event.end_date.strftime('%d/%m/%Y at %I:%M %p') %></p>
    <p class="h6"><span class="font-weight-bold">Duration : </span><%= @event.duration %></p>
    <p class="h6"><span class="font-weight-bold">Location : </span><%= @event.location %></p>
    <p class="h6"><span class="font-weight-bold">Price : </span><%= @event.price %> â‚¬</p>
  </div>
</div>