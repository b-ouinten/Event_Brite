<div class="container-fluid mt-3">
  <p>You can create you beautiful event here !</p>
  <%= form_for @event do |f| %>
    <div class="row">
      <div class="col-xs col-sm-6 col-md-4">
        <div class="form-group">
          <div>
            <%= f.label 'title', 'Title :', class: 'col-form-label' %>
            <%= f.text_field :title, class: "form-control form-control-sm" %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs col-md-6">
        <div class="form-group">
          <div>
            <%= f.label 'description', 'Description :', class: 'col-form-label' %>
            <%= f.text_area :description, rows: 3, class: "form-control" %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs col-sm-4 col-md-3">
        <div class="form-group">
          <div>
            <%= f.label 'start_date', 'Start date : ' %>
            <%= f.text_field :start_date, data:{ provide:'datepicker', 'date-format' => 'dd-mm-yyyy', 'date-autoclose' => 'true'}, placeholder: 'DD-MM-YYYY'  , class: "form-control form-control-sm" %>
          </div>
        </div>
      </div>
      <div class="col-xs col-sm-4 col-md-3">
        <div class="form-group">
          <div>
            <%= f.label 'duration', 'Duration : ' %>
            <%= f.text_field :duration, class: "form-control form-control-sm" %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs col-sm-6 col-md-4">
        <div class="form-group">
            <%= f.label 'location', 'Location : ', class: 'col-form-label' %>
            <%= f.text_field :location, class: "form-control form-control-sm" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-4">
        <div class="form-group">
            <%= f.label 'price', 'Price : ', class: 'col-form-label' %>
            <%= f.text_field :price, class: "form-control form-control-sm" %>
        </div>
      </div>
    </div>
    <%= submit_tag "Create event", class: "btn btn-info btn-sm" %>
  <% end %>

  <% if @event.errors.any? %>
    <div class="mt-3 alert alert-danger">
      <p>Event creation faild for the following reason(s) :</p>
      <ul>
        <% @event.errors.full_messages.each do |message| %>
          <li><%= message %>.</li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>