<div class="container-fluid">
  <div class="jumbotron-fluid alert alert-info mt-3">
    <div class="d-flex flex-row justify-content-between align-items-center">
      <h3 class="text-uppercase font-weight-bold"><%= @user.first_name %> <%= @user.last_name %></h3>
    <div>
    <div class="d-flex flex-column justify-content-center align-items-center">
      <%=  link_to 'Edit email and password', edit_user_registration_path, class: 'btn btn-success btn-sm mb-3', style: 'text-decoration: none' %>
      <%= link_to 'Edit other informations', edit_user_path(@user.id), class: 'btn btn-warning btn-sm', style: 'text-decoration: none' %>
    </div>
    </div>
    </div>
    <div class="card mb-3" style="max-width: 450px;">
      <div class="row no-gutters">
        <div class="col-md-4">
          <%= image_tag 'users/photo.jpeg', class: 'card-img'%>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <p class="card-texte"><%= @user.description %></p>
          </div>
        </div>
      </div>
    </div>
    <hr class="my-4">
    <p class="h6"><span class="font-weight-bold">Email : </span><%= @user.email %></p>
  </div>
</div>

<% if @user.events.count != 0 %>
  <div class="card">
    <div class="card-header alert alert-info h5 mb-0">
      These are all the events that you are scheduled :
    </div>
    <ul class="list-group list-group-flush">
      <% @user.events.each do |event| %>
        <li class="list-group-item py-0 d-flex flex-row justify-content-between align-items-center">
          <div class="mt-3">
            <p class="text-card"><%= event.title %></p>
            <%= link_to 'Show event details', event_path(event.id), class: 'btn btn-info btn-sm' %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
