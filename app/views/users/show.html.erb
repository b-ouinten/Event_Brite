<div class="container-fluid">
  <div class="jumbotron-fluid alert alert-info mt-3">
    <div class="row">
      <div class="col-xs col-md-7 pretty-border mb-2 mb-md-0">
        <div class="row p-3">
          <div class="col-2 p-0">
            <%= image_tag 'users/photo.png', class: 'mr-3 img-fluid'%>
          </div>
          <div class="col-10">
            <h6 class="mt-0 font-weight-bold text-uppercase text-dark">Description :</h6>
            <p class="text-wrap text-justify"><%= @user.description %></p>
          </div>
        </div>
      </div>
      <div class="col-xs col-md-5 align-self-center">
        <div class="card">
          <div class="card-header font-weight-bold">
            Personel informations
          </div>
          <div class="d-flex flex-row justify-content-between align-items-end">
            <ul class="list-group list-group-flush">
              <li class="list-group-item text-uppercase font-weight-bold"><%= @user.first_name %></li>
              <li class="list-group-item text-uppercase font-weight-bold"><%= @user.last_name %></li>
              <li class="list-group-item"><span class="font-weight-bold">Email : </span><%= @user.email %></li>
            </ul>
            <div class="d-flex flex-column justify-content-center align-items-center mr-1 mb-1">
              <%= link_to 'Edit email and password', edit_user_registration_path, class: 'btn btn-success btn-sm btn-block', style: 'text-decoration: none' %>
              <%= link_to 'Edit other informations', edit_user_path(@user.id), class: 'btn btn-primary btn-sm btn-block', style: 'text-decoration: none' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% if @user.events.count != 0 %>
  <div class="card">
    <div class="card-header alert alert-info h6 mb-0">
      These are all the events that you are scheduled :
    </div>
    <ul class="list-group list-group-flush">
      <% @user.events.each do |event| %>
        <li class="box-shadow list-group-item pt-0 pb-2 d-flex flex-row justify-content-between align-items-center bg-white">
          <div class="mt-3">
            <p class="text-card text-dark"><%= event.title %></p>
            <%= link_to 'Show event details', event_path(event.id), class: 'btn btn-warning btn-sm' %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>